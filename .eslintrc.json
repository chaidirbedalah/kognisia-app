{
  "extends": ["next/core-web-vitals"],
  "ignorePatterns": ["tests/**", "supabase/functions/**", "scripts/**"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "react/no-unescaped-entities": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    },
    {
      "files": ["**/*.jsx", "**/*.tsx"],
      "rules": {
        "react/no-unescaped-entities": "warn"
      }
    }
  ]
}
